{{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" include="authors,tags"}}
{{#if posts}}
    <div class="most-commented-section">
        <div class="container">
            <div class="section-title d-flex align-items-center mt-50 mb-30">
                {{> title-bar}}
                <h4>{{t "Related News"}}</h4>
            </div>
            <div class="most-commented-post">
                <div class="row">
                    {{#foreach posts limit="3" visibility="all"}}
                    <div class="col-lg-4 col-md-6">
                        <div class="single-columm-post">
                            <div class="single-news-post related-posts d-flex  mb-30">
                                <a href="{{url}}" class="d-block w-100">
                                {{#if feature_image}}
                                <div class="card-thumb">
                                    <img class="lazy" srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w"
                                            sizes="(max-width: 800px) 400px,
                                    (max-width: 1170px) 700px,
                                    1400px" src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" data-src="{{img_url feature_image size="xl"}}" alt="{{title}}">
                                </div>
                                {{/if}}
                                </a>
                                <div class="card-details card-details-2{{^if feature_image}}text-center mx-auto no-related-feature{{/if}}">
                                <a class="post-card-link" href="{{url}}"></a>
                                    {{#primary_tag}}
                                    <div class="badge-text text-deeppink">
                                        <span><a href="{{url}}">{{name}}</a></span>
                                    </div>
                                    {{/primary_tag}}
                                    <h5><a href="{{url}}">{{title}}</a></h5>
                                    <p class="d-flex align-items-center">
                                        <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/foreach}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
{{/get}}