{{#get "posts" limit="4" filter="tag:economics"}}
    {{#if posts}}
        <div class="around-world-content section-space">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex align-items-center justify-content-between mt-10 mb-30">
                            <div class="section-title d-flex align-items-center ">
                                {{> title-bar}}
                                <h4>{{t "Economics"}}</h4>
                            </div>
                            <div class="tags-all">
                                <a href="/tag/economics">{{t "view all"}}
                                    <span class="left-icon ml-2">{{> "icons/arrow-right"}}</span>
                                </a>
                            </div>
                        </div>
                        <div class="post-wrapper-content mb-30">
                            <div class="row">
                                {{#foreach posts visibility="all"}}
                                    <div class="col-lg-6">
                                        <div class="single-column-post">
                                            <div class="post mb-30">
                                                <a href="{{url}}">
                                                <div class="single-post height-250  d-flex flex-column justify-content-between px-30 py-20" {{#if  feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
                                                </div>
                                                </a>
                                                <div class="postcard-text postcard-text-2 mt-10">
                                                    <div class="card-details">
                                                        <p class="d-flex align-items-center">
                                                            <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                                                        </p>
                                                    </div>
                                                    <h5><a href="{{url}}">{{title}}</a></h5>
                                                    <p>
                                                        {{#if custom_excerpt}}
                                                        {{custom_excerpt}}
                                                        {{else}}
                                                        {{excerpt words="20"}}
                                                        {{/if}}
                                                    </p>
                                                    <div class="post-btn mt-30">
                                                        <a href="{{url}}" class="btn">{{t "Read More"}}</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/foreach}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>                   
    {{/if}}
{{/get}}