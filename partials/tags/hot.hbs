{{#get "posts" limit="all" filter="tag:news"}}
    {{#if posts}}
        <div class="hot-area-section">
            <div class="container">
                <div class="section-title d-flex align-items-center mt-10 mb-30">
                    {{> title-bar}}
                    <h4>{{t "Hot news"}}</h4>
                </div>
            </div>
            <div class="hot-slider owl-carousel owl-theme slider-nav slider-nav-3">
                {{#foreach posts visibility="all"}}
                <div class="post mb-25 hot-post mr-10">
                    <div class="single-post d-flex flex-column justify-content-end px-30 py-20 height-220" {{#if  feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
                        <a class="post-card-link" href="{{url}}"></a>
                        <div class="postcard-text mt-60">
                            <div class="postcard-text">
                                <h5><a href="{{url}}">{{title}}</a></h5>
                                <div class="card-details">
                                    <p class="d-flex align-items-center">
                                        <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/foreach}}
            </div>
        </div>
    {{/if}}
{{/get}}