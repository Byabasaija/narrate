{{#get "posts" limit="9" filter="tag:black-history" include="tags"}}
    {{#if posts}}
        <div class="py-8">
            <div class="container mx-auto">
                <div class="flex items-center mt-12 mb-8">
                    {{> title-bar}}
                    <h4 class="text-lg font-semibold">{{t "Black History"}}</h4>
                </div>
                <div class="post-wrapper-content">
                    <div class="flex flex-wrap -mx-4">
                        {{#foreach posts limit="3" to="1" visibility="all"}}
                            <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-6">
                                <div class="post mb-6">
                                    <div class="single-post flex flex-col justify-end px-8 py-5 h-56" {{#if feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
                                        {{#primary_tag}}
                                        <div class="feature-tag">
                                            <a href="{{url}}" class="text-white">{{name}}</a>
                                        </div>
                                        {{/primary_tag}}
                                        <a class="post-card-link" href="{{url}}"></a>
                                        <div class="postcard-text mt-16">
                                            <h5><a href="{{url}}" class="text-lg font-semibold text-white">{{title}}</a></h5>
                                            <div class="card-details">
                                                <p class="flex items-center mt-2">
                                                    <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                <div class="trending-post-area">
                    <div class="post-wrapper-content">
                        <div class="flex flex-wrap -mx-4">
                            {{#foreach posts from="4" limit="6" visibility="all"}}
                                <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-6">
                                    {{> post-card/small-thumbnail}}
                                </div>
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/get}}
