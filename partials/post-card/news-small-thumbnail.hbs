<div class="col-lg-3 col-md-6">
    <div class="post mb-20">
        <div class="single-post height-180 d-flex flex-column justify-content-between px-30 py-20" {{#if  feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
                {{#primary_tag}}
                <div class="feature-tag">
                    <a href="{{url}}">{{name}}</a>
                </div>
                {{/primary_tag}}
            <a class="post-card-link" href="{{url}}"></a>    
        </div>
        <div class="postcard-text postcard-text-2 mt-10">
            <h6><a href="{{url}}">{{title}}</a></h6>
            <div class="card-details">
                <p class="d-flex align-items-center">
                    <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                </p>
            </div>
        </div>
    </div>
</div>