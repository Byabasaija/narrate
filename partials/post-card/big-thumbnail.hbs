<div class="post mb-30">
    <a href="{{url}}">
        <div class="single-post height-220 d-flex flex-column justify-content-between px-30 py-20" {{#if  feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
        </div>  
    </a>
    <div class="postcard-text postcard-text-2 mt-10">
        <h6><a href="{{url}}">{{title}}</a></h6>
        <div class="card-details">
            <p class="d-flex align-items-center">
                <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
            </p>
        </div>
    </div>
</div>