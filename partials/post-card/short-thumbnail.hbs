<!--single read post wrapper-->
<div class="post mr-10">
    <div class="single-news-post top-readpost  mb-10">
        <a href="{{url}}">
        {{#if feature_image}}
            <div class="card-thumb  w-100 height-150 h-100 mr-15">
                <img src="{{feature_image}}" alt="{{title}}">
            </div>
        {{/if}}
        </a>
        <div class="card-details mt-10">
            <h5><a href="{{url}}">{{title}}</a></h5>
            <p class="d-flex align-items-center">
                <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
            </p>
        </div>
    </div>
</div>